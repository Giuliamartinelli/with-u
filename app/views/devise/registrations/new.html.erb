<div class="container-mobile">
  <div class="prof-header text-center p-3 m-3">
    <h2 class=" form-title form-name">Sign up</h2>
  </div>
  <div class="image-form-container d-flex">
    <div class="simple-form-container w-100 px-5">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-group">
            <%= f.input :name,
                        required: true,
                        label: false,
                        placeholder: "Nome",
                        input_html: { autocomplete: "nome" } %>
          </div>
          <div class="form-group">
            <%= f.input :prefix,
                        collection: ["+39", "+31", "+32", "+33", "+34", "+36", "+30", "+40", "+43", "+45", "+46", "+47", "+48", "+49", "+351", "+352", "+353", "+354", "+356", "+357", "+358", "+359", "+370", "+371", "+372", "+385", "+386", "+420", "+421", "+423"],
                        input_html: { :class => 'form-control'},
                        label: false, default: "+39" %>
          <div class="form-group">
            <%= f.input :phone_number,
                        required: true,
                        label: false,
                        placeholder: "Numero di telefono",
                        input_html: { autocomplete: "numero di telefono" } %>
          </div>
          <div class="form-group">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: "Email",
                        input_html: { autocomplete: "email" }%>
          </div>

          <div class="form-group">
            <%= f.input :password,
                        required: true,
                        label: false,
                        placeholder: "Password",
                        hint: ("Minimo #{@minimum_password_length} caratteri" if @minimum_password_length),
                        input_html: { autocomplete: "nuova-password" } %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        placeholder: "Conferma la tua Password",
                        input_html: { autocomplete: "nuova-password" } %>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <div class="form-actions btn btn-ghost mt-2">
            <%= f.button :submit, "Iscriviti" %>
          </div>
        </div>

      <% end %>

        <div class="mt-4 text-center">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
