<div class="notification" id="form-angel">
    <%= simple_form_for @angel, :remote => true do |f| %>

      <div class="notification-content">
        <%= f.input :name,
                  placeholder: 'Nome',
                  label: false %>
        <%= f.input :prefix,
                    collection: ["+39", "+31", "+32", "+33", "+34", "+36", "+30", "+40", "+43", "+45", "+46", "+47", "+48", "+49", "+351", "+352", "+353", "+354", "+356", "+357", "+358", "+359", "+370", "+371", "+372", "+385", "+386", "+420", "+421", "+423"],
                    input_html: { :class => 'form-control'},
                    label: false, default: "+39" %>
        <%= f.input :phone_number,
                  placeholder: 'Numero di Telefono',
                  label: false %>
      </div>

      <div class="notification-actions">
        <%= f.button :submit, "Salva", class: "btn form-btn" %>
      </div>

      <div class="mt-4 text-center">
        <%= link_to "Indietro", profile_path(current_user), class: "btn-shared"%>
      </div>
    <% end %>


  </div>
