<div class="notification" id="form-angel">
    <%= simple_form_for @angel, :remote => true do |f| %>

      <div class="notification-content">
        <%= f.input :name,
                  placeholder: 'Name',
                  label: false %>
        <%= f.input :prefix,
                    collection: ["+39", "+45", "+15", "+2"],
                    input_html: { :class => 'form-control'},
                    label: false, default: "+39" %>
        <%= f.input :phone_number,
                  placeholder: 'Phone number',
                  label: false %>
      </div>

      <div class="notification-actions">
        <%= f.button :submit, "Submit", class: "btn form-btn" %>
      </div>

      <div class="mt-4 text-center">
        <%= link_to "Back", profile_path(current_user), class: "btn-shared"%>
      </div>
    <% end %>


  </div>
