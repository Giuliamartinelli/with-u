      <p id="wrtchangegreencall" class="mt-4 call-description-white">Chiama Angeli</p>

    </div>


    <div class="text-center" id="send-location-change">
      <% if @verification.count == 1 %>
        <a id="geoLoc">
      <% else %>
        <a>
      <% end %>
          <i id="btnchangegreensendloc" class="fas fa-map-marker-alt bg-gray btn-loc"></i>
          <p id="wrtchangegreensendloc" class="call-description-white m-1">Condividi posizione</p>
        </a>
    </div>

    <div class="text-center" id="pause-audio-change">
      <i id="btnchangegreenaudio" class="fas fa-equals bg-gray btn-pause audio-pause"></i>
      <p id="wrtchangegreenaudio" class="call-description-white m-1">Pausa</p>
    </div>

  </div>

  <br>
  <br>
  <br>
  <br>

